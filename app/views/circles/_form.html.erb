<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: [@event, @circle], local: true do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :hall_no %>
      <%= f.text_field :hall_no, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :circle_no %>
      <%= f.text_field :circle_no, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :circle_name %>
      <%= f.text_field :circle_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :circle_memo %>
      <%= f.text_field :circle_memo, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :circle_image %>
      <%= f.file_field :circle_image, class: 'form-control mb-3', accept: 'image/*' %>
      <%= f.hidden_field :circle_image_cache %>
    </div>


    <div class="actions">
      <p class="text-center">
        <%= f.submit class: 'register-button' %>
      </p>
    </div>
    <% end %>
  </div>
</div>