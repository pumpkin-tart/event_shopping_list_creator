<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">ホール</th>
      <th scope="col">サークル番号</th>
      <th scope="col">サークル名</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @circles.each do |circle| %>
      <tr>
        <td><%= circle.circle_image %></td>
        <td><%= circle.hall_no %></td>
        <td><%= circle.circle_no %></td>
        <td><%= circle.circle_name %></td>
        <td><%= link_to 'Show', event_circle_path(@event, circle) %></td>
        <td><%= link_to 'Edit', edit_event_circle_path(@event, circle) %><td>
        <td><%= button_to 'Destroy', event_circle_path(@event, circle), method: :delete, data: { turbo_confirm: 'Are you sure?' } %></td>       
      </tr>
    <% end %>
  </tbody>
</table>