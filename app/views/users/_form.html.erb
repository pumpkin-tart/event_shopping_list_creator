<%= form_with(model: user, local: true) do |form| %>

  
    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>
  
    <div class="field">
      <%= form.label :password %><br />
      <%= form.password_field :password %>
    </div>
  
    <div class="field">
      <%= form.label :password_confirmation %><br />
      <%= form.password_field :password_confirmation %>
    </div>

    <div class="actions">
      <%= form.submit "Login" %>
    </div>
<% end %>