<% content_for(:title, t('.title')) %>
<div class="contents">
  <h1>イベント一覧</h1>
  <div class="event">

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %><td>
          <td><%= button_to 'Destroy', event_path(event), method: :delete, data: { turbo_confirm: 'Are you sure?' } %></td>       
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
