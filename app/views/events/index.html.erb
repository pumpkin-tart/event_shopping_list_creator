<% content_for(:title, t('.title')) %>
<div class="contents">
  <h1>イベント一覧</h1>
  <div class="event">

  <table class="table">
    <thead>
      <tr>
        <th>イベント</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= link_to '詳細', event, class: "show-button" %></td>
          <td><%= link_to '編集', edit_event_path(event), class: "show-button" %><td>
          <td><%= button_to '削除', event_path(event), method: :delete, class: "show-button", data: { turbo_confirm: 'Are you sure?' } %></td>       
        </tr>
      <% end %>
    </tbody>
  </table>
  <!-- ページネーション -->
      <%= paginate @events %>
</div>
