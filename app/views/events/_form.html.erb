<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: event, local: true do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :map_image %>
      <%= f.file_field :map_image, class: 'form-control mb-3', accept: 'image/*' %>
      <%= f.hidden_field :map_image_cache %>
    </div>
    
    <div class="actions">
      <p class="text-center">
        <%= f.submit class: 'register-button' %>
      </p>
    </div>
    <% end %>
  </div>
</div>

    