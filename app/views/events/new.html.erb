<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1>イベント作成</h1>
      <%= form_with model: @event, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :map_image %>
          <%= f.file_field :map_image, class: 'form-control mb-3', accept: 'image/*' %>
          <%= f.hidden_field :map_image_cache %>
        </div>
        <%= f.submit '作成', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>